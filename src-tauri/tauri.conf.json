{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri2",
  "version": "0.1.3",
  "identifier": "supply.same.tirekick",
  "build": {
    "beforeDevCommand": "pnpm dev:n",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build:n",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "tauri2",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "pattern": {
        "use": "isolation",
        "options": {
          "dir": "../isolation"
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "supply.same.tirekick",
          "tirekick"
        ]
      }
    }
  }
}